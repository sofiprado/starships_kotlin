<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margins_text_space">

    <TextView
        android:id="@+id/starship_name_label"
        style="@style/starships_list.labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starship_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starship_name_value" />

    <TextView
        android:id="@+id/starship_model_label"
        style="@style/starships_list.labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starship_model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starship_model_value" />

    <TextView
        android:id="@+id/starship_cost_label"
        style="@style/starships_list.labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starship_cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starship_cost_value" />

    <TextView
        android:id="@+id/starship_manufacturer_label"
        style="@style/starships_list.labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starship_manufacturer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starship_manufacturer_value" />

    <TextView
        android:id="@+id/starship_length_label"
        style="@style/starships_list.labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starship_length"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starship_length_value" />

    <TextView
        android:id="@+id/starship_crew_label"
        style="@style/starships_list.labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starship_crew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starship_crew_value" />


    <TextView
        android:id="@+id/starship_name_value"
        style="@style/starships_list"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        tools:text="Nave 1"
        app:layout_constrainedWidth="false"
        app:layout_constraintStart_toEndOf="@+id/starship_name_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/starship_model_value"
        style="@style/starships_list"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        tools:text="Nave 2"
        app:layout_constraintStart_toEndOf="@+id/starship_model_label"
        app:layout_constraintTop_toBottomOf="@+id/starship_name_value" />

    <TextView
        android:id="@+id/starship_manufacturer_value"
        style="@style/starships_list"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        tools:text="Nave 3"
        app:layout_constraintStart_toEndOf="@+id/starship_manufacturer_label"
        app:layout_constraintTop_toBottomOf="@+id/starship_model_value" />

    <TextView
        android:id="@+id/starship_cost_value"
        style="@style/starships_list"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        tools:text="Nave 4"
        app:layout_constraintStart_toEndOf="@+id/starship_cost_label"
        app:layout_constraintTop_toBottomOf="@+id/starship_manufacturer_value" />

    <TextView
        android:id="@+id/starship_length_value"
        style="@style/starships_list"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        tools:text="Nave 5"
        app:layout_constraintStart_toEndOf="@+id/starship_length_label"
        app:layout_constraintTop_toBottomOf="@+id/starship_cost_value" />

    <TextView
        android:id="@+id/starship_crew_value"
        style="@style/starships_list"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        tools:text="Nave 6"
        app:layout_constraintStart_toEndOf="@+id/starship_crew_label"
        app:layout_constraintTop_toBottomOf="@+id/starship_length_value" />
</androidx.constraintlayout.widget.ConstraintLayout>
